def imbored():
	print("Fortune teller")
	name = input("What is your name?")
	print("Hello %s. Please answer the following four questions to know your future.", %name)
	q1 = int(input("Please choose a number 1 - 4\n"))
	if q1 == 1:
		case1(1)
	elif q1== 2:
		case1(2)
	elif q1 == 3:
		case1(3)			
	elif q1 == 4:
